class MerriersController < ApplicationController

  def index
  end

  def new
    @merrier = Merrier.new
  end

  def create
    @merrier = Merrier.new(merrier_params)

    if @merrier.save
      flash(:merrier) = "Message sent."
      redirect_to root_path
    else
      render :new
    end
    
  end

  private
  def merrier_params
    params.require(:merrier).permit(:first_name, :message)
  end



end
